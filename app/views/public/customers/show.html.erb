<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mt-5 offset-md-1">
      <h2><span class="bg-light">マイページ</span></h2>
    </div>
  </div>

  <div class="row">
    <div class="mt-5">
      <h2><span class="bg-light">登録情報</span></h2>
    </div>

    <div class="mt-5 offset-md-1">
      <%= link_to "編集する", edit_customer_path, class: 'btn btn-succsess' %>
    </div>

    <table class="table table-bordered border-primary">
      <tr>
        <td class="table-active">氏名</td>
        <td>
          <%= @customer.last_name %> <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <td class="table-active">カナ</td>
        <td>
          <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td class="table-active">郵便番号</td>
        <td>
          <%= @customer.postcode %>
        </td>
      </tr>
      <tr>
        <td class="table-active">住所</td>
        <td>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <td class="table-active">メールアドレス</td>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="mt-5">
      <h2><span class="bg-light">配送先</span></h2>
    </div>
    <div class="mt-5 offset-md-1">
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <div class="mt-5">
      <h2><span class="bg-light">注文履歴</span></h2>
    </div>
    <div class="mt-5 offset-md-1">
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
    </div>
  </div>

</div>